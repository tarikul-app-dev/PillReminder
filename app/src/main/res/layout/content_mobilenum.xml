<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.UserActivity"
    tools:showIn="@layout/activity_mobilenum"
    app:errorTextAppearance="@style/Animation.AppCompat.DropDownUp">


    <TextView
        android:id="@+id/txv_head_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="28dp"
        android:text="Add your Mobile Number"/>
    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txv_head_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:background="@drawable/roundplantext"
        android:drawableLeft="@mipmap/mobile"
        android:ems="10"
        android:gravity="center"
        android:hint="Aamir Issa"
        />
    <EditText
        android:id="@+id/edt_mob_number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/roundplantext"
        android:drawableLeft="@mipmap/mobile"
        android:ems="10"
        android:gravity="center"
        android:hint="e.g 03005114297"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:layout_marginBottom="11dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_mob_number" />
</RelativeLayout>
